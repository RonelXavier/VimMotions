{
  "manifest_version": 3,
  "name": "Vim Motions for Chrome",
  "version": "1.02",
  "description": "Vim-style keybindings for efficient text navigation and editing in browser inputs.",
  "content_scripts": [
    {
      "js": ["content.js",
      "handlers/textbox.js",
      "handlers/contenteditable.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
  "16": "vimicon.png",
  "32": "vimicon.png",
  "48": "vimicon.png",
  "128": "vimicon.png"
  },
  "action": {
    "default_icon" : "vimicon.png"}
  }

